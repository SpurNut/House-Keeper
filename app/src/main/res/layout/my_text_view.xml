<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/divider_top"
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/task_urgency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_title"
        android:paddingLeft="18dp"
        android:text="@string/important_urgent"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/task_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_title"
        android:layout_toRightOf="@+id/task_urgency"
        android:paddingLeft="37dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_urgency"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="4dp"
        android:text="Das ist eine Beispiel Beschreibung. Wir sollten also darauf achten wie sich das ganze verhält. BLABLALBLALABL.
        Das ist eine Beispiel Beschreibung. Wir sollten also darauf achten wie sich das ganze verhält. BLABLALBLALABL
        Das ist eine Beispiel Beschreibung. Wir sollten also darauf achten wie sich das ganze verhält. BLABLALBLALABL"
        android:textColor="@android:color/black"

        android:textSize="14sp" />

    <ToggleButton
        android:id="@+id/showMoreToggle"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_description"
        android:layout_alignEnd="@+id/task_description"
        android:onClick="onClick"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/colorPrimary"
        android:textOff="More"
        android:textOn="Less"
        android:visibility="gone"
        android:layout_marginLeft="18dp"
        />

    <View
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_height="1dp"
        android:layout_below="@+id/showMoreToggle"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="50dp"
        android:background="?android:attr/listDivider" />


</RelativeLayout>

