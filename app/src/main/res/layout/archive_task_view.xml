<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/archived_divider_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/archived_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/archived_divider_top"
        android:layout_alignStart="@+id/archived_divider_top"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_toStartOf="@+id/button_revive"
        android:textSize="@dimen/sp_21"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_revive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/archived_divider_top"
        android:layout_alignEnd="@+id/archived_divider_top"
        android:layout_marginTop="@dimen/dp_8"
        android:minWidth="@dimen/dp_86"
        android:minHeight="@dimen/dp_0"
        android:text="@string/revive"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/archived_task_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/archived_task_title"
        android:layout_alignStart="@+id/archived_divider_top"
        android:layout_marginTop="@dimen/dp_56"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <View
        android:id="@+id/archived_divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/archived_task_due_date"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:background="?android:attr/listDivider"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="@dimen/dp_50" />


</RelativeLayout>